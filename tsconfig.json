{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "declaration": false,
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "./src/**/*.spec.ts"],
  "include": ["./src/**/*.ts", ".d.ts"]
}
